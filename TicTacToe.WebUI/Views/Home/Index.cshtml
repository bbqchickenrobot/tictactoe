@model TicTacToe.WebUI.Models.IndexModel

@{
    ViewBag.Title = "Spela";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
        </div>
    </section>
}
<form action="/" method="POST" id="form1">
    <canvas id="boardCanvas" width="600" height="600"></canvas>
    <button type="button" value="Spela!" id="playButton">Spela!</button>
    <ul id="players">
        @foreach (var player in Model.Players){
            <li>@player.Name</li>
        }
    </ul>
    <ul id="messages"></ul>
    <div id="debug"></div>
</form>

